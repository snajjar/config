var DualBox = require('@dualbox/dualbox');
var description = require('./package.json');

var DualboxTypesAll3D = require('@dualbox/dualbox-type-all3d');

/**
 *  A simple module to test if a number is even or odd.
 *  @constructor
 *  @extends {DualBox.Module}
 */
var NumberIsEven = function(attrs){
    DualBox.Module.call(this, description, attrs);
    this.parallel = false;
    this.async = false;
};
NumberIsEven.prototype = Object.create(DualBox.Module.prototype);
NumberIsEven.prototype.constructor = NumberIsEven;

// [Abstract] See DualBox.Module
NumberIsEven.prototype.compute = function(input, response){

    var output = {
        b : Math.round(input.x/2) === input.x/2
    };

    response.send(output);
};

module.exports = NumberIsEven;

