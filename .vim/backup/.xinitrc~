setxkbmap fr
xrdb -merge ~/.Xresources

# activer Vbox client
VBoxClient-all &

#xrandr -s 2560x1600
xrandr --output DP-4 -s 1920x1080 -r 60 --output DP-3 -s 1920x1080 --right-of DP-4

# handle brightness of different monitors (require xorg-xblacklight I tink)
xrandr --output DP-4 --brightness 0.3
xrandr --output DP-3 --brightness 0.8

# bind mod4 key to "win" key
# xmodmap -e "keycode 115 = Super_L" -e "add mod4 = Super_L"

# start awesome
exec awesome

# set default cursor
xsetroot -cursor_name left_ptr
