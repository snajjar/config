import { env, UIComponent, $} from '@dualbox/dualbox';
var pkgDesc = require('../package.json');

if( env.browser ) {
    require('@dualbox/dualbox-lib-bootstrap');  // require bootstrap to work
    require('./BootstrapButton.css'); // for bundle compilation
}

/**
 *  Attributes in appDesc :
 *  text : text of the button
 *  id : html id
 */
class BootstrapButton extends UIComponent {
    constructor(pkgDesc, appDesc, options) {
        super(pkgDesc, appDesc, options)
        this.attr = {};

        var that = this;
        Object.keys(pkgDesc.dualbox.attr).forEach(function (key) {
            that.attr[key] = appDesc.attr[key] !== undefined ? appDesc.attr[key]  : pkgDesc.dualbox.attr[key].value;
        });
    }

    onClick(e) {
        this.trigger({});
    }

    disable() {
        $(this.div).prop('disabled', true);
    }

    enable() {
        $(this.div).prop('disabled', false);
    }

    hide(){
        $(this.div).hide();
    }

    show(){
        $(this.div).show();
    }

    static attachTo(appDesc, attrs, div) {
        // build slider from package.json desc
        var component = new BootstrapButton(pkgDesc, appDesc, attrs);

        // button attributes
        var attr = component.attr;

        var buttonHTML = attr.text;
        if( attr.glyphicon ) {
            buttonHTML = "<i class='glyphicon " + attr.glyphicon + "'></i> " + buttonHTML;
        }
        if( attr.fontawesomeIcon ) {
            buttonHTML = "<i class='fa " + attr.fontawesomeIcon + "'></i> " + buttonHTML;
        }
        if( attr.imgIconSource ) {
            buttonHTML = "<img class='dualbox dualbox-bootstrap-button-image' src='" + attr.imgIconSource + "'> " + buttonHTML;
        }

        // instanciate div from app.json parameters
        component.div = $('<button/>', {
                id:    appDesc.id,
                type:  'text',
                class: 'dualbox btn ' + attr.class + ' db-button',
            }).append(buttonHTML)
            .click(component.onClick.bind(component))

        // append to param div and return the button
        $(div).append(component.div);
        if(attr.disabled){
            component.disable();
        }
        if( attr.hidden ) {
            $(component.div).hide();
        }


        return component;
    }
}

module.exports = BootstrapButton;
