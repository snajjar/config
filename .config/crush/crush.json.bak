{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": ["view", "ls", "edit", "grep", "bash"]
  },
  "lsp": {
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"]
    },
    "javascript": {
      "command": "typescript-language-server",
      "args": ["--stdio"]
    },
    "node": {
      "command": "typescript-language-server",
      "args": ["--stdio"]
    }
  },
  "mcp": {
    "search": {
      "type": "stdio",
      "command": "search_mcp.sh",
      "args": []
    }
  },
  "providers": {
    "ollama-http": {
      "name": "Ollama",
      "base_url": "http://127.0.0.1:11434/v1/",
      "stream": true,
      "http": {
        "keep_alive": true,
        "max_idle_conns": 20,
        "idle_conn_timeout": "120s"
      },
      "type": "openai",
      "models": [
        {
          "name": "Qwen 3 1.7B",
          "id": "qwen3:1.7b",
          "context_window": 32768,
          "default_max_tokens": 4096
        },
        {
          "name": "Phi4-mini",
          "id": "phi4-mini:latest",
          "context_window": 32768,
          "default_max_tokens": 4096
        },
        {
          "name": "Qwen2.5 Coder",
          "id": "hhao/qwen2.5-coder-tools:1.5b",
          "context_window": 32768,
          "default_max_tokens": 4096
        },
        {
          "name": "Granite 3.3",
          "id": "granite3.3:8b",
          "context_window": 32768,
          "default_max_tokens": 4096
        },
        {
          "name": "ToolAce",
          "id": "luminon/toolace-8b:latest",
          "context_window": 32768,
          "default_max_tokens": 4096
        }
      ]
    }
  }
,"models":{
  "small": {
    "provider": "ollama-http",
    "model": "qwen3:1.7b"
  },
  "large": {
    "provider": "ollama-http",
    "model": "qwen3:1.7b"
  }
}}
